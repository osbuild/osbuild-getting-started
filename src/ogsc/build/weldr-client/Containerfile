FROM registry.fedoraproject.org/fedora:36

RUN \
    dnf install -y \
        git \
        make \
        rpm-build \
        dnf-plugins-core && \
        dnf clean all

RUN \
    mkdir /build

ARG weldr_client_version=main

RUN \
    git clone \
        --branch ${weldr_client_version} \
        --depth 1 \
        https://github.com/osbuild/weldr-client\
        /build/weldr-client 2>&1 > /dev/null

WORKDIR \
    /build/weldr-client

ENV \
    GOFLAGS=-mod=vendor

# XXX fix up from makefile!
RUN \
    make weldr-client.spec && \
    dnf builddep -y --spec -D 'with 1' weldr-client.spec && \
    dnf clean all
