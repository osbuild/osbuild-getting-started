FROM registry.fedoraproject.org/fedora:40

RUN \
    dnf install -y \
        git \
        openssl \
        python-docutils \
        make \
        pkg-config \
        rpm-build \
        python3-setuptools \
        python3-devel \
        selinux-policy \
        selinux-policy-devel \
        systemd \
        golang \
        krb5-devel \
        dnf-plugins-core && \
        dnf clean all

RUN \
    mkdir /build

ARG osbuild_composer_version=main

RUN \
    git clone \
        -b ${osbuild_composer_version} \
        --depth 1 \
        https://github.com/osbuild/osbuild-composer \
        /build/osbuild-composer

WORKDIR \
    /build/osbuild-composer

ENV \
    GOFLAGS=-mod=vendor

RUN \
    dnf builddep -y osbuild-composer.spec && \
    dnf clean all
